.serve-item {
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 24rpx;
    margin: 20rpx 0;
    padding-right: 16rpx;
    box-sizing: border-box;
    
}
.left-img {
    width: 240rpx;
    height: 160rpx;
}
.right-item{
    flex: 1;
    padding-left: 24rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.right-title{
    display: flex;
    align-items: center;
    padding: 12rpx 0;
}
.title-text{
    font-size: 36rpx;
    flex: 1;
}
.right-img{
    width: 44rpx;
    height: 44rpx;
}
.right-content{
    font-size: 32rpx;
}